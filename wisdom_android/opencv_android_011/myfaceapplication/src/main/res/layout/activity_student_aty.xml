<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".StudentAty">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.xuexiang.xui.widget.banner.widget.banner.SimpleGuideBanner
            android:id="@+id/stuLoopView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:bb_isLoopEnable="true"
            app:bb_isAutoScrollEnable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/border_input_box"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            android:src="@drawable/logo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text="学号"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <TextView
                    android:id="@+id/stuAty_id"
                    android:text="41604090109"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:text="姓名"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <TextView
                    android:text="张三"
                    android:id="@+id/stuAty_name"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:text="班级"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/stuAty_class"
                    android:text="热动力工程1701班"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:text="积分"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <TextView
                    android:gravity="center_vertical"
                    android:text="⭐⭐⭐⭐"
                    android:id="@+id/stuAty_jifen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <LinearLayout
                android:onClick="toCheckInfoAty"
                android:padding="10dp"
                android:background="@drawable/border_input_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/stu_check"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    />
                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="考勤信息" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/border_input_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/stu_homework"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    />
                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="课堂作业" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/border_input_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/stu_class"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    />
                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="课堂内容" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">


            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/border_input_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/stu_evaluate"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    />
                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="课程评价" />
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/border_input_box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:src="@drawable/stu_activity"
                    android:layout_weight="3"
                    android:layout_height="0dp"
                    />
                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="课外活动" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
